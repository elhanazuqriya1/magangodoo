<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pendaftaran_pdf_report" model="ir.actions.report">
            <field name="name">Bukti Pendaftaran Pasien</field>
            <field name="model">simrs.pasien</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">simrs.report_pendaftaran_pdf_template</field>
            <field name="report_file">simrs.report_pendaftaran_pdf_template</field>
            <field name="print_report_name">'Bukti_Pendaftaran_%s' % (object.no_rm)</field>
            <field name="binding_model_id" ref="model_simrs_pasien"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_pendaftaran_pdf_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="pasien">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center mb-4">Bukti Pendaftaran Pasien</h2>
                            <div class="row mb-4">
                                <div class="col-12">
                                    <table class="table table-sm">
                                        <tr>
                                            <td width="30%"><strong>Nomor RM</strong></td>
                                            <td width="2%">:</td>
                                            <td><span t-field="pasien.no_rm"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nama Pasien</strong></td>
                                            <td>:</td>
                                            <td><span t-field="pasien.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tanggal Lahir</strong></td>
                                            <td>:</td>
                                            <td><span t-field="pasien.dob"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Jenis Kelamin</strong></td>
                                            <td>:</td>
                                            <td><span t-field="pasien.gender"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tanggal Pendaftaran</strong></td>
                                            <td>:</td>
                                            <td><span t-field="pasien.create_date"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-muted"><i>* Harap simpan bukti pendaftaran ini dan tunjukkan saat berobat</i></p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
