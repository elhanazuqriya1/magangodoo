<odoo>
    <template id="daftar_poli_sukses_template" name="Pendaftaran Poli Berhasil">
        <t t-call="website.layout">
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap');
                
                /* Modern Teal Turquoise Theme */
                :root {
                    --primary: #009688;
                    --primary-light: #4db6ac;
                    --primary-dark: #00796b;
                    --accent: #26c6da;
                    --bg-light: #e0f7fa;
                    --bg-white: #ffffff;
                    --text-dark: #263238;
                    --text-medium: #00838f;
                    --text-light: #78909c;
                    --border-color: #b2ebf2;
                    --shadow: rgba(38, 198, 218, 0.15);
                    --input-bg: rgba(224, 247, 250, 0.5);
                    --transition: all 0.3s ease;
                }
                
                body {
                    background-color: var(--bg-light);
                    background-image: 
                        radial-gradient(#26c6da 0.3px, transparent 0.3px), 
                        radial-gradient(#4db6ac 0.3px, var(--bg-light) 0.3px);
                    background-size: 24px 24px;
                    background-position: 0 0, 12px 12px;
                    background-attachment: fixed;
                    font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                    line-height: 1.6;
                }

                .success-container {
                    min-height: 80vh;
                    padding: 40px 20px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                
                .success-card {
                    border-radius: 20px;
                    border: none;
                    box-shadow: 0 20px 40px rgba(0, 150, 136, 0.15);
                    background-color: white;
                    padding: 3rem !important;
                    transition: var(--transition);
                    position: relative;
                    overflow: hidden;
                    margin: 2rem auto;
                    animation: fadeInUp 0.8s ease;
                }
                
                .success-card::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 6px;
                    background: linear-gradient(90deg, var(--primary), var(--accent));
                }
                
                .success-card:hover {
                    box-shadow: 0 25px 50px rgba(0, 150, 136, 0.2);
                    transform: translateY(-5px);
                }
                
                .success-header {
                    text-align: center;
                    margin-bottom: 35px;
                    position: relative;
                }
                
                .card-header-icon {
                    font-size: 5rem;
                    background: linear-gradient(135deg, var(--primary), var(--accent));
                    -webkit-background-clip: text;
                    background-clip: text;
                    -webkit-text-fill-color: transparent;
                    margin-bottom: 1.5rem;
                    display: inline-block;
                    animation: pulseIcon 2s infinite;
                }
                
                .success-header h2 {
                    font-size: 2.2rem;
                    font-weight: 700;
                    background: linear-gradient(135deg, var(--primary-dark), var(--accent));
                    -webkit-background-clip: text;
                    background-clip: text;
                    -webkit-text-fill-color: transparent;
                    margin-bottom: 15px;
                    letter-spacing: -0.5px;
                }
                
                .patient-info-container {
                    margin: 30px 0;
                    border-radius: 16px;
                    background: linear-gradient(145deg, #ffffff, #f8fdfe);
                    box-shadow: 0 8px 15px rgba(77, 182, 172, 0.08);
                    padding: 1px;
                    position: relative;
                    animation: fadeInUp 0.8s 0.2s ease backwards;
                }
                
                .patient-info {
                    background-color: rgba(245, 255, 254, 0.7);
                    border-radius: 14px;
                    padding: 25px;
                    border: none;
                    position: relative;
                }
                
                .patient-info::before {
                    content: "";
                    position: absolute;
                    left: 0;
                    top: 0;
                    height: 100%;
                    width: 4px;
                    background: linear-gradient(to bottom, var(--primary-light), var(--accent));
                    border-radius: 4px 0 0 4px;
                }
                
                .info-group {
                    display: flex;
                    margin-bottom: 15px;
                    align-items: center;
                    animation: fadeInRight 0.5s ease backwards;
                }
                
                .info-group:last-child {
                    margin-bottom: 0;
                }

                .info-group:nth-child(1) { animation-delay: 0.3s; }
                .info-group:nth-child(2) { animation-delay: 0.4s; }
                .info-group:nth-child(3) { animation-delay: 0.5s; }
                .info-group:nth-child(4) { animation-delay: 0.6s; }
                .info-group:nth-child(5) { animation-delay: 0.7s; }
                .info-group:nth-child(6) { animation-delay: 0.8s; }
                
                .info-label {
                    width: 150px;
                    font-weight: 600;
                    color: var(--text-medium);
                    font-size: 0.95rem;
                }
                
                .info-value {
                    flex: 1;
                    color: var(--text-dark);
                    font-weight: 500;
                    font-size: 1.05rem;
                }
                
                .registration-container {
                    margin-top: 2rem;
                    text-align: center;
                    animation: fadeInUp 0.8s 0.4s ease backwards;
                }
                
                .registration-label {
                    margin-bottom: 10px;
                    font-size: 1.05rem;
                    color: var(--text-medium);
                    font-weight: 500;
                }
                
                .registration-number {
                    font-size: 1.5rem;
                    font-weight: 700;
                    color: var(--primary-dark);
                    padding: 15px 25px;
                    background: linear-gradient(145deg, #f3fffe, #e0f7fa);
                    border-radius: 12px;
                    display: inline-block;
                    margin-top: 10px;
                    position: relative;
                    box-shadow: 0 3px 10px rgba(38, 198, 218, 0.1);
                    letter-spacing: 1px;
                }
                
                .registration-number::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    border-radius: 12px;
                    padding: 2px;
                    background: linear-gradient(135deg, var(--primary-light), var(--accent));
                    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                    -webkit-mask-composite: xor;
                    mask-composite: exclude;
                    pointer-events: none;
                }
                
                .btn-teal {
                    margin-top: 2.5rem;
                    background: linear-gradient(45deg, var(--primary), var(--accent));
                    color: white;
                    padding: 14px 28px;
                    border: none;
                    border-radius: 12px;
                    font-size: 1rem;
                    font-weight: 600;
                    cursor: pointer;
                    transition: var(--transition);
                    box-shadow: 0 4px 10px rgba(38, 198, 218, 0.3);
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    animation: fadeInUp 0.8s 0.6s ease backwards;
                }
                
                .btn-teal:hover {
                    background: linear-gradient(45deg, var(--primary-dark), var(--primary));
                    transform: translateY(-2px);
                    box-shadow: 0 8px 15px rgba(38, 198, 218, 0.4);
                }
                
                .btn-teal:active {
                    transform: translateY(0);
                }
                
                .btn-teal i {
                    margin-right: 10px;
                    transition: transform 0.3s ease;
                }
                
                .btn-teal:hover i {
                    transform: translateX(-5px);
                }
                
                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                
                @keyframes fadeInRight {
                    from {
                        opacity: 0;
                        transform: translateX(-20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateX(0);
                    }
                }
                
                @keyframes pulseIcon {
                    0% {
                        transform: scale(1);
                        opacity: 1;
                    }
                    50% {
                        transform: scale(1.05);
                        opacity: 0.8;
                    }
                    100% {
                        transform: scale(1);
                        opacity: 1;
                    }
                }
                
                /* Responsive adjustments */
                @media (max-width: 768px) {
                    .success-card {
                        padding: 2rem 1.5rem !important;
                    }
                    
                    .success-header h2 {
                        font-size: 1.8rem;
                    }
                    
                    .card-header-icon {
                        font-size: 4rem;
                    }
                    
                    .patient-info {
                        padding: 20px 15px;
                    }
                    
                    .info-group {
                        flex-direction: column;
                        align-items: flex-start;
                        margin-bottom: 20px;
                    }
                    
                    .info-label {
                        width: 100%;
                        margin-bottom: 5px;
                        font-size: 0.9rem;
                    }
                    
                    .info-value {
                        font-size: 1rem;
                    }
                    
                    .registration-number {
                        font-size: 1.3rem;
                        padding: 12px 20px;
                    }
                }
            </style>
            
            <div class="success-container">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-10 col-sm-12">
                        <div class="success-card">
                            <div class="success-header">
                                <i class="fa fa-check-circle card-header-icon"></i>
                                <h2>Pendaftaran Poli Berhasil!</h2>
                            </div>
                            
                            <div class="patient-info-container">
                                <div class="patient-info">
                                    <div class="info-group">
                                        <div class="info-label">Nama Pasien</div>
                                        <div class="info-value"><t t-esc="pendaftaran.pasien_id.name"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">No RM</div>
                                        <div class="info-value"><t t-esc="pendaftaran.no_rm"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Poli / Unit</div>
                                        <div class="info-value"><t t-esc="pendaftaran.unit_id.name"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Dokter</div>
                                        <div class="info-value"><t t-esc="pendaftaran.dokter_id.name"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Tanggal</div>
                                        <div class="info-value"><t t-esc="pendaftaran.tanggal.strftime('%d-%m-%Y')"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Nomor Antrian</div>
                                        <div class="info-value"><t t-esc="pendaftaran.nomor_antrian"/></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="registration-container">
                                <div class="registration-label">Nomor Pendaftaran Anda:</div>
                                <div class="registration-number">
                                    <span t-esc="pendaftaran.name"/>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <a href="/pendaftaranpoli" class="btn btn-teal">
                                    <i class="fa fa-arrow-left"></i> Kembali ke Formulir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
