<odoo>
    <template id="daftar_poli_sukses_template" name="Pendaftaran Poli Berhasil">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-lg p-4 text-center">
                            <h2 class="mb-4 text-success">Pendaftaran Poli Berhasil!</h2>
                            <p><strong>Nama Pasien:</strong> <t t-esc="pendaftaran.pasien_id.name"/></p>
                            <p><strong>No RM:</strong> <t t-esc="pendaftaran.no_rm"/></p>
                            <p><strong>Poli / Unit:</strong> <t t-esc="pendaftaran.unit_id.name"/></p>
                            <p><strong>Dokter:</strong> <t t-esc="pendaftaran.dokter_id.name"/></p>
                            <p><strong>Tanggal:</strong> <t t-esc="pendaftaran.tanggal.strftime('%d-%m-%Y')"/></p>
                            <p><strong>Nomor Antrian:</strong> <t t-esc="pendaftaran.nomor_antrian"/></p>
                            <p><strong>Nomor Pendaftaran:</strong> <t t-esc="pendaftaran.name"/></p>
                            <a href="/pendaftaranpoli" class="btn btn-primary mt-3">Kembali ke Formulir</a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
