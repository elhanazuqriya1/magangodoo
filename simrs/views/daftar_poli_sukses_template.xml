<odoo>
    <template id="daftar_poli_sukses_template" name="Pendaftaran Poli Berhasil">
        <t t-call="website.layout">
            <style>
                .success-container {
                    background: linear-gradient(135deg, #f8fdfd, #e6f7f7);
                    min-height: 80vh;
                    padding: 40px 20px;
                }
                .success-card {
                    border-radius: 15px;
                    border: none;
                    box-shadow: 0 10px 30px rgba(0, 150, 136, 0.15);
                    background-color: white;
                    padding: 2.5rem !important;
                    transition: all 0.3s ease;
                }
                .success-card:hover {
                    box-shadow: 0 15px 35px rgba(0, 150, 136, 0.2);
                    transform: translateY(-5px);
                }
                .text-teal {
                    color: #009688;
                }
                .card-header-icon {
                    font-size: 4rem;
                    color: #20B2AA;
                    margin-bottom: 1rem;
                }
                .patient-info {
                    background-color: #f5fffe;
                    border-radius: 10px;
                    padding: 15px;
                    margin: 20px 0;
                    border-left: 4px solid #20B2AA;
                }
                .patient-info p {
                    margin-bottom: 10px;
                    font-size: 1.1rem;
                }
                .patient-info strong {
                    color: #00796B;
                    font-weight: 600;
                }
                .btn-teal {
                    background-color: #20B2AA;
                    border-color: #20B2AA;
                    color: white;
                    padding: 10px 25px;
                    font-weight: 600;
                    border-radius: 30px;
                    transition: all 0.3s;
                }
                .btn-teal:hover {
                    background-color: #00897B;
                    border-color: #00897B;
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(0, 137, 123, 0.3);
                }
                .registration-number {
                    font-size: 1.3rem;
                    color: #00695C;
                    padding: 8px 15px;
                    background-color: #E0F2F1;
                    border-radius: 8px;
                    display: inline-block;
                    margin-top: 10px;
                }
                @media (max-width: 768px) {
                    .success-card {
                        padding: 1.5rem !important;
                    }
                    .patient-info {
                        padding: 10px;
                    }
                    .patient-info p {
                        font-size: 1rem;
                    }
                }
            </style>
            
            <div class="success-container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10 col-sm-12">
                        <div class="success-card text-center">
                            <i class="fa fa-check-circle card-header-icon"></i>
                            <h2 class="mb-4 text-teal">Pendaftaran Poli Berhasil!</h2>
                            
                            <div class="patient-info text-left">
                                <p><strong>Nama Pasien:</strong> <span t-esc="pendaftaran.pasien_id.name"/></p>
                                <p><strong>No RM:</strong> <span t-esc="pendaftaran.no_rm"/></p>
                                <p><strong>Poli / Unit:</strong> <span t-esc="pendaftaran.unit_id.name"/></p>
                                <p><strong>Dokter:</strong> <span t-esc="pendaftaran.dokter_id.name"/></p>
                                <p><strong>Tanggal:</strong> <span t-esc="pendaftaran.tanggal.strftime('%d-%m-%Y')"/></p>
                                <p><strong>Nomor Antrian:</strong> <span t-esc="pendaftaran.nomor_antrian"/></p>
                            </div>
                            
                            <div class="mt-3">
                                <p>Nomor Pendaftaran Anda:</p>
                                <div class="registration-number">
                                    <span t-esc="pendaftaran.name"/>
                                </div>
                            </div>
                            
                            <a href="/pendaftaranpoli" class="btn btn-teal mt-4">
                                <i class="fa fa-arrow-left mr-2"></i> Kembali ke Formulir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
