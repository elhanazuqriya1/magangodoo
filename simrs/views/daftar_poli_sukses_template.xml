<odoo>
    <template id="daftar_poli_sukses_template" name="Pendaftaran Poli Berhasil">
        <t t-call="website.layout">
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap');
                @import url('https://fonts.googleapis.com/icon?family=Material+Icons');

                :root {
                    --primary: #009688;
                    --primary-light: #4db6ac;
                    --primary-dark: #00796b;
                    --accent: #26c6da;
                    --bg-light: #e0f7fa;
                    --bg-white: #ffffff;
                    --text-dark: #263238;
                    --text-medium: #00838f;
                    --text-light: #78909c;
                    --border-color: #b2ebf2;
                    --shadow: rgba(38, 198, 218, 0.15);
                    --input-bg: rgba(224, 247, 250, 0.5);
                    --transition: all 0.3s ease;
                }

                body {
                    background-color: var(--bg-light);
                    background-image: radial-gradient(#26c6da 0.3px, transparent 0.3px), radial-gradient(#4db6ac 0.3px, var(--bg-light) 0.3px);
                    background-size: 24px 24px;
                    background-position: 0 0, 12px 12px;
                    background-attachment: fixed;
                    font-family: 'Poppins', sans-serif;
                }

                .success-container {
                    min-height: 80vh;
                    padding: 40px 20px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .success-card {
                    border-radius: 20px;
                    border: none;
                    box-shadow: 0 20px 40px rgba(0, 150, 136, 0.15);
                    background-color: white;
                    padding: 3rem;
                    transition: var(--transition);
                    position: relative;
                    overflow: hidden;
                    margin: 2rem auto;
                    animation: fadeInUp 0.8s ease;
                }

                .success-card::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 6px;
                    background: linear-gradient(90deg, var(--primary), var(--accent));
                }

                .success-header {
                    text-align: center;
                    margin-bottom: 35px;
                }

                .hospital-logo {
                    width: 80px;
                    height: 80px;
                    object-fit: contain;
                    margin-bottom: 20px;
                    border-radius: 50%;
                    border: 3px solid var(--primary);
                    background: var(--bg-white);
                    box-shadow: 0 4px 15px rgba(0, 150, 136, 0.2);
                    animation: pulseIcon 2s infinite;
                }

                .success-header h2 {
                    font-size: 2.2rem;
                    font-weight: 700;
                    background: linear-gradient(135deg, var(--primary-dark), var(--accent));
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
                }

                .success-subtitle {
                    color: var(--text-medium);
                    font-size: 1.1rem;
                    font-weight: 500;
                }

                .patient-info-container {
                    margin: 30px 0;
                    border-radius: 16px;
                    background: linear-gradient(145deg, #ffffff, #f8fdfe);
                    box-shadow: 0 8px 15px rgba(77, 182, 172, 0.08);
                    padding: 1px;
                    position: relative;
                }

                .patient-info {
                    background-color: rgba(245, 255, 254, 0.7);
                    border-radius: 14px;
                    padding: 25px;
                }

                .info-group {
                    display: flex;
                    margin-bottom: 15px;
                    align-items: center;
                }

                .info-label {
                    width: 150px;
                    font-weight: 600;
                    color: var(--text-medium);
                }

                .info-value {
                    flex: 1;
                    color: var(--text-dark);
                    font-weight: 500;
                }

                .button-container {
                    display: flex;
                    gap: 15px;
                    margin-top: 2.5rem;
                    justify-content: center;
                    flex-wrap: wrap;
                }

                .btn-teal, .btn-print {
                    padding: 14px 28px;
                    border-radius: 12px;
                    font-size: 1rem;
                    font-weight: 600;
                    cursor: pointer;
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    text-transform: uppercase;
                    text-decoration: none;
                }

                .btn-teal {
                    background: linear-gradient(45deg, var(--primary), var(--accent));
                    color: white;
                }

                .btn-print {
                    background: linear-gradient(45deg, #1565c0, #42a5f5);
                    color: white;
                }
            </style>

            <div class="success-container">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-10 col-sm-12">
                        <div class="success-card">
                            <div class="success-header">
                                <img src="/simrs/static/src/img/kemenkes.webp" alt="Logo Rumah Sakit" class="hospital-logo"/>
                                <h2>Pendaftaran Poli Berhasil!</h2>
                                <p class="success-subtitle">Data pendaftaran Anda telah tercatat di sistem kami.</p>
                            </div>

                            <div class="patient-info-container">
                                <div class="patient-info">
                                    <div class="info-group">
                                        <div class="info-label">Nama Pasien</div>
                                        <div class="info-value"><t t-esc="pendaftaran.pasien_id.name"/></div>
                                    </div>
                                    <div class="info-group">
                                        <div class="info-label">No RM</div>
                                        <div class="info-value"><t t-esc="pendaftaran.no_rm"/></div>
                                    </div>
                                    <div class="info-group">
                                        <div class="info-label">Poli / Unit</div>
                                        <div class="info-value"><t t-esc="pendaftaran.unit_id.name"/></div>
                                    </div>
                                    <div class="info-group">
                                        <div class="info-label">Dokter</div>
                                        <div class="info-value"><t t-esc="pendaftaran.dokter_id.name"/></div>
                                    </div>
                                    <div class="info-group">
                                        <div class="info-label">Tanggal</div>
                                        <div class="info-value"><t t-esc="pendaftaran.tanggal.strftime('%d-%m-%Y')"/></div>
                                    </div>
                                    <div class="info-group">
                                        <div class="info-label">Nomor Antrian</div>
                                        <div class="info-value"><t t-esc="pendaftaran.nomor_antrian"/></div>
                                    </div>
                                </div>
                            </div>

                            <div class="button-container">
                                <a href="/pendaftaranpoli" class="btn-teal">
                                    <span class="material-icons">arrow_back</span>
                                    Kembali ke Formulir
                                </a>
                                <a t-att-href="'/report/pdf/simrs.report_daftarpoli_pdf_template/' + str(pendaftaran.id)" class="btn-print">
                                    <span class="material-icons">picture_as_pdf</span>
                                    Cetak PDF
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
