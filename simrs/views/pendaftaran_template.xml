<odoo>
    <template id="pendaftaran_template">
        <!-- Header dan Formulir Pendaftaran Pasien Baru -->
        <div class="page-container">
            <div class="header-section">
                <div class="header-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
                        <path d="M12 16C15.31 16 18 13.31 18 10C18 6.69 15.31 4 12 4C8.69 4 6 6.69 6 10C6 13.31 8.69 16 12 16Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
                    </svg>
                </div>
                <h1 class="header-title">Pendaftaran Pasien Baru</h1>
                <p class="header-subtitle">Lengkapi data diri Anda dengan akurat untuk pendaftaran</p>
            </div>
            
            <div class="form-container">
                <form action="/pendaftaran" method="POST" class="registration-form">
                    <!-- CSRF Token -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <!-- Personal Information Section -->
                    <div class="form-section">
                        <h3 class="section-title">Informasi Pribadi</h3>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name" class="form-label">
                                    <span class="label-text">Nama Lengkap</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input type="text" id="name" name="name" class="form-input" 
                                           placeholder="Masukkan nama lengkap" required="required"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label for="tempat_lahir" class="form-label">
                                    <span class="label-text">Tempat Lahir</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input type="text" id="tempat_lahir" name="tempat_lahir" class="form-input" 
                                           placeholder="Masukkan tempat lahir" required="required"/>
                                </div>
                            </div>

                            <div class="form-group half-width">
                                <label for="dob" class="form-label">
                                    <span class="label-text">Tanggal Lahir</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input type="date" id="dob" name="dob" class="form-input" required="required"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label for="gender" class="form-label">
                                    <span class="label-text">Jenis Kelamin</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <select id="gender" name="gender" class="form-input" required="required">
                                        <option value="" disabled="disabled" selected="selected">Pilih jenis kelamin</option>
                                        <option value="male">Laki-Laki</option>
                                        <option value="female">Perempuan</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group half-width">
                                <label for="goldar" class="form-label">
                                    <span class="label-text">Golongan Darah</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <select id="goldar" name="goldar" class="form-input" required="required">
                                        <option value="" disabled="disabled" selected="selected">Pilih golongan darah</option>
                                        <option value="A">A</option>
                                        <option value="B">B</option>
                                        <option value="AB">AB</option>
                                        <option value="O">O</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label for="phone" class="form-label">
                                    <span class="label-text">Nomor Telepon</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input type="tel" id="phone" name="phone" class="form-input" 
                                           placeholder="08xxxxxxxxxx" required="required"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="alamat" class="form-label">
                                    <span class="label-text">Alamat Lengkap</span>
                                    <span class="required">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <textarea id="alamat" name="alamat" class="form-input form-textarea" 
                                              placeholder="Masukkan alamat lengkap termasuk kode pos" 
                                              required="required"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <span class="btn-text">Daftar</span>
                            <svg class="btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                        <p class="form-note">Dengan mendaftar, Anda menyetujui syarat dan ketentuan yang berlaku</p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Modern CSS Styling -->
        <style>
            /* CSS Variables */
            :root {
                --primary: #14b8a6;           /* Modern Teal */
                --primary-dark: #0f766e;      /* Darker Teal */
                --primary-light: #5eead4;     /* Light Teal */
                --secondary: #06b6d4;         /* Cyan */
                --background: #f8fafc;        /* Very Light Gray */
                --surface: #ffffff;           /* White */
                --surface-hover: #f1f5f9;     /* Light Gray */
                --text-primary: #0f172a;      /* Dark Slate */
                --text-secondary: #64748b;    /* Slate Gray */
                --text-muted: #94a3b8;        /* Light Slate */
                --border: #e2e8f0;            /* Light Border */
                --border-focus: #14b8a6;      /* Teal Border */
                --error: #ef4444;             /* Red */
                --success: #10b981;           /* Green */
                --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
                --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
                --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
                --radius-sm: 0.375rem;
                --radius-md: 0.5rem;
                --radius-lg: 0.75rem;
                --radius-xl: 1rem;
            }

            /* Base Styles */
            * {
                box-sizing: border-box;
            }

            body {
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                line-height: 1.6;
                color: var(--text-primary);
                background: linear-gradient(135deg, #f0fdfa 0%, #ecfeff 100%);
                margin: 0;
                padding: 0;
                min-height: 100vh;
            }

            /* Page Container */
            .page-container {
                max-width: 800px;
                margin: 0 auto;
                padding: 2rem 1rem;
            }

            /* Header Section */
            .header-section {
                text-align: center;
                margin-bottom: 3rem;
            }

            .header-icon {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 80px;
                height: 80px;
                background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
                border-radius: 50%;
                color: white;
                margin-bottom: 1.5rem;
                box-shadow: var(--shadow-lg);
            }

            .header-title {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--text-primary);
                margin: 0 0 0.5rem 0;
                letter-spacing: -0.025em;
            }

            .header-subtitle {
                font-size: 1.125rem;
                color: var(--text-secondary);
                margin: 0;
                font-weight: 400;
            }

            /* Form Container */
            .form-container {
                background: var(--surface);
                border-radius: var(--radius-xl);
                box-shadow: var(--shadow-lg);
                border: 1px solid var(--border);
                overflow: hidden;
            }

            .registration-form {
                padding: 2.5rem;
            }

            /* Form Sections */
            .form-section {
                margin-bottom: 2rem;
            }

            .section-title {
                font-size: 1.25rem;
                font-weight: 600;
                color: var(--text-primary);
                margin: 0 0 1.5rem 0;
                padding-bottom: 0.75rem;
                border-bottom: 2px solid var(--primary-light);
                position: relative;
            }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 3rem;
                height: 2px;
                background: var(--primary);
                border-radius: 1px;
            }

            /* Form Layout */
            .form-row {
                display: flex;
                gap: 1.5rem;
                margin-bottom: 1.5rem;
            }

            .form-group {
                flex: 1;
            }

            .form-group.half-width {
                flex: 0 0 calc(50% - 0.75rem);
            }

            /* Form Labels */
            .form-label {
                display: flex;
                align-items: center;
                margin-bottom: 0.5rem;
                font-weight: 500;
                color: var(--text-primary);
                font-size: 0.875rem;
            }

            .label-text {
                margin-right: 0.25rem;
            }

            .required {
                color: var(--error);
                font-weight: 700;
            }

            /* Input Wrapper */
            .input-wrapper {
                position: relative;
            }

            /* Form Inputs */
            .form-input {
                width: 100%;
                padding: 0.75rem 1rem;
                border: 2px solid var(--border);
                border-radius: var(--radius-md);
                font-size: 1rem;
                background: var(--surface);
                color: var(--text-primary);
                transition: all 0.2s ease;
                outline: none;
            }

            .form-input:focus {
                border-color: var(--border-focus);
                box-shadow: 0 0 0 3px rgb(20 184 166 / 0.1);
            }

            .form-input:hover {
                border-color: var(--text-muted);
            }

            .form-input::placeholder {
                color: var(--text-muted);
                opacity: 1;
            }

            /* Textarea */
            .form-textarea {
                min-height: 120px;
                resize: vertical;
                font-family: inherit;
            }

            /* Select Styling */
            select.form-input {
                cursor: pointer;
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
                background-position: right 0.75rem center;
                background-repeat: no-repeat;
                background-size: 1.5em 1.5em;
                padding-right: 2.5rem;
                appearance: none;
            }

            /* Form Actions */
            .form-actions {
                margin-top: 2.5rem;
                text-align: center;
            }

            /* Primary Button */
            .btn-primary {
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                color: white;
                border: none;
                padding: 1rem 2rem;
                border-radius: var(--radius-md);
                font-size: 1.125rem;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.2s ease;
                box-shadow: var(--shadow-md);
                min-width: 200px;
                justify-content: center;
            }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
                transform: translateY(-1px);
                box-shadow: var(--shadow-lg);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

            .btn-text {
                flex: 1;
            }

            .btn-icon {
                transition: transform 0.2s ease;
            }

            .btn-primary:hover .btn-icon {
                transform: translateX(2px);
            }

            /* Form Note */
            .form-note {
                margin-top: 1rem;
                font-size: 0.875rem;
                color: var(--text-muted);
                line-height: 1.5;
            }

            /* Responsive Design */
            @media (max-width: 768px) {
                .page-container {
                    padding: 1rem 0.5rem;
                }

                .header-title {
                    font-size: 2rem;
                }

                .header-subtitle {
                    font-size: 1rem;
                }

                .registration-form {
                    padding: 1.5rem;
                }

                .form-row {
                    flex-direction: column;
                    gap: 1rem;
                }

                .form-group.half-width {
                    flex: 1;
                }

                .btn-primary {
                    width: 100%;
                    min-width: auto;
                }
            }

            @media (max-width: 480px) {
                .header-icon {
                    width: 60px;
                    height: 60px;
                }

                .header-title {
                    font-size: 1.75rem;
                }

                .registration-form {
                    padding: 1rem;
                }

                .form-input {
                    padding: 0.625rem 0.75rem;
                }
            }

            /* Loading State */
            .btn-primary:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none;
            }

            /* Focus Visible */
            .btn-primary:focus-visible {
                outline: 2px solid var(--primary);
                outline-offset: 2px;
            }

            .form-input:focus-visible {
                outline: 2px solid var(--primary);
                outline-offset: -2px;
            }

            /* Animation */
            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .form-container {
                animation: fadeIn 0.6s ease-out;
            }
        </style>
    </template>
</odoo>
