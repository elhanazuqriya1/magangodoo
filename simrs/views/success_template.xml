<odoo>
    <template id="success_template">
        <t t-call="website.layout">
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap');
                @import url('https://fonts.googleapis.com/icon?family=Material+Icons');
                
                /* Modern Teal Turquoise Theme */
                :root {
                    --primary: #009688;
                    --primary-light: #4db6ac;
                    --primary-dark: #00796b;
                    --accent: #26c6da;
                    --bg-light: #e0f7fa;
                    --bg-white: #ffffff;
                    --text-dark: #263238;
                    --text-medium: #00838f;
                    --text-light: #78909c;
                    --border-color: #b2ebf2;
                    --shadow: rgba(38, 198, 218, 0.15);
                    --input-bg: rgba(224, 247, 250, 0.5);
                    --transition: all 0.3s ease;
                }
                
                body {
                    background-color: var(--bg-light);
                    background-image: 
                        radial-gradient(#26c6da 0.3px, transparent 0.3px), 
                        radial-gradient(#4db6ac 0.3px, var(--bg-light) 0.3px);
                    background-size: 24px 24px;
                    background-position: 0 0, 12px 12px;
                    background-attachment: fixed;
                    font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                    line-height: 1.6;
                }

                .success-container {
                    min-height: 80vh;
                    padding: 40px 20px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                
                .success-card {
                    border-radius: 20px;
                    border: none;
                    box-shadow: 0 20px 40px rgba(0, 150, 136, 0.15);
                    background-color: white;
                    padding: 3rem !important;
                    transition: var(--transition);
                    position: relative;
                    overflow: hidden;
                    margin: 2rem auto;
                    animation: fadeInUp 0.8s ease;
                }
                
                .success-card::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 6px;
                    background: linear-gradient(90deg, var(--primary), var(--accent));
                }
                
                .success-card:hover {
                    box-shadow: 0 25px 50px rgba(0, 150, 136, 0.2);
                    transform: translateY(-5px);
                }
                
                .success-header {
                    text-align: center;
                    margin-bottom: 35px;
                    position: relative;
                }
                
                .hospital-logo {
                    width: 80px;
                    height: 80px;
                    object-fit: contain;
                    margin-bottom: 20px;
                    border-radius: 50%;
                    border: 3px solid var(--primary);
                    background: var(--bg-white);
                    box-shadow: 0 4px 15px rgba(0, 150, 136, 0.2);
                    animation: pulseIcon 2s infinite;
                }
                
                .success-header h2 {
                    font-size: 2.2rem;
                    font-weight: 700;
                    background: linear-gradient(135deg, var(--primary-dark), var(--accent));
                    -webkit-background-clip: text;
                    background-clip: text;
                    -webkit-text-fill-color: transparent;
                    margin-bottom: 15px;
                    letter-spacing: -0.5px;
                }
                
                .success-subtitle {
                    color: var(--text-medium);
                    font-size: 1.1rem;
                    font-weight: 500;
                    margin-bottom: 0;
                }
                
                .patient-info-container {
                    margin: 30px 0;
                    border-radius: 16px;
                    background: linear-gradient(145deg, #ffffff, #f8fdfe);
                    box-shadow: 0 8px 15px rgba(77, 182, 172, 0.08);
                    padding: 1px;
                    position: relative;
                    animation: fadeInUp 0.8s 0.2s ease backwards;
                }
                
                .patient-info {
                    background-color: rgba(245, 255, 254, 0.7);
                    border-radius: 14px;
                    padding: 25px;
                    border: none;
                    position: relative;
                }
                
                .patient-info::before {
                    content: "";
                    position: absolute;
                    left: 0;
                    top: 0;
                    height: 100%;
                    width: 4px;
                    background: linear-gradient(to bottom, var(--primary-light), var(--accent));
                    border-radius: 4px 0 0 4px;
                }
                
                .info-group {
                    display: flex;
                    margin-bottom: 15px;
                    align-items: center;
                    animation: fadeInRight 0.5s ease backwards;
                }
                
                .info-group:last-child {
                    margin-bottom: 0;
                }

                .info-group:nth-child(1) { animation-delay: 0.3s; }
                .info-group:nth-child(2) { animation-delay: 0.4s; }
                .info-group:nth-child(3) { animation-delay: 0.5s; }
                .info-group:nth-child(4) { animation-delay: 0.6s; }
                .info-group:nth-child(5) { animation-delay: 0.7s; }
                .info-group:nth-child(6) { animation-delay: 0.8s; }
                .info-group:nth-child(7) { animation-delay: 0.9s; }
                
                .info-label {
                    width: 150px;
                    font-weight: 600;
                    color: var(--text-medium);
                    font-size: 0.95rem;
                }
                
                .info-value {
                    flex: 1;
                    color: var(--text-dark);
                    font-weight: 500;
                    font-size: 1.05rem;
                }
                
                .button-container {
                    display: flex;
                    gap: 15px;
                    margin-top: 2.5rem;
                    justify-content: center;
                    flex-wrap: wrap;
                    animation: fadeInUp 0.8s 0.6s ease backwards;
                }
                
                .btn-teal {
                    background: linear-gradient(45deg, var(--primary), var(--accent));
                    color: white;
                    padding: 14px 28px;
                    border: none;
                    border-radius: 12px;
                    font-size: 1rem;
                    font-weight: 600;
                    cursor: pointer;
                    transition: var(--transition);
                    box-shadow: 0 4px 10px rgba(38, 198, 218, 0.3);
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    text-decoration: none;
                }
                
                .btn-teal:hover {
                    background: linear-gradient(45deg, var(--primary-dark), var(--primary));
                    transform: translateY(-2px);
                    box-shadow: 0 8px 15px rgba(38, 198, 218, 0.4);
                    color: white;
                    text-decoration: none;
                }
                
                .btn-print {
                    background: linear-gradient(45deg, #1565c0, #42a5f5);
                    color: white;
                    padding: 14px 28px;
                    border: none;
                    border-radius: 12px;
                    font-size: 1rem;
                    font-weight: 600;
                    cursor: pointer;
                    transition: var(--transition);
                    box-shadow: 0 4px 10px rgba(21, 101, 192, 0.3);
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    text-decoration: none;
                }
                
                .btn-print:hover {
                    background: linear-gradient(45deg, #0d47a1, #1565c0);
                    transform: translateY(-2px);
                    box-shadow: 0 8px 15px rgba(21, 101, 192, 0.4);
                    color: white;
                    text-decoration: none;
                }
                
                .btn-teal:active, .btn-print:active {
                    transform: translateY(0);
                }
                
                .btn-teal .material-icons, .btn-print .material-icons {
                    margin-right: 8px;
                    font-size: 18px;
                    transition: transform 0.3s ease;
                }
                
                .btn-teal:hover .material-icons {
                    transform: translateX(-3px);
                }
                
                .btn-print:hover .material-icons {
                    transform: scale(1.1);
                }
                
                .check-animation {
                    position: absolute;
                    top: -40px;
                    right: -40px;
                    width: 100px;
                    height: 100px;
                    z-index: 2;
                    pointer-events: none;
                    animation: pulseIcon 2s infinite;
                }
                
                .checkmark {
                    width: 100px;
                    height: 100px;
                    display: block;
                }
                
                .checkmark-circle {
                    stroke: var(--primary);
                    stroke-width: 3;
                    stroke-dasharray: 166;
                    stroke-dashoffset: 166;
                    animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
                }
                
                .checkmark-check {
                    stroke: var(--primary);
                    stroke-width: 3;
                    stroke-linecap: round;
                    stroke-dasharray: 48;
                    stroke-dashoffset: 48;
                    animation: stroke 0.4s 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
                }
                
                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                
                @keyframes fadeInRight {
                    from {
                        opacity: 0;
                        transform: translateX(-20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateX(0);
                    }
                }
                
                @keyframes pulseIcon {
                    0% {
                        transform: scale(1);
                        opacity: 1;
                    }
                    50% {
                        transform: scale(1.05);
                        opacity: 0.8;
                    }
                    100% {
                        transform: scale(1);
                        opacity: 1;
                    }
                }
                
                @keyframes stroke {
                    100% {
                        stroke-dashoffset: 0;
                    }
                }
                
                /* Responsive adjustments */
                @media (max-width: 768px) {
                    .success-card {
                        padding: 2rem 1.5rem !important;
                    }
                    
                    .success-header h2 {
                        font-size: 1.8rem;
                    }
                    
                    .hospital-logo {
                        width: 60px;
                        height: 60px;
                    }
                    
                    .patient-info {
                        padding: 20px 15px;
                    }
                    
                    .info-group {
                        flex-direction: column;
                        align-items: flex-start;
                        margin-bottom: 20px;
                    }
                    
                    .info-label {
                        width: 100%;
                        margin-bottom: 5px;
                        font-size: 0.9rem;
                    }
                    
                    .info-value {
                        font-size: 1rem;
                    }
                    
                    .button-container {
                        flex-direction: column;
                        gap: 10px;
                    }
                    
                    .btn-teal, .btn-print {
                        width: 100%;
                        padding: 12px 20px;
                        font-size: 0.95rem;
                    }
                    
                    .check-animation {
                        width: 70px;
                        height: 70px;
                        top: -25px;
                        right: -25px;
                    }
                    
                    .checkmark {
                        width: 70px;
                        height: 70px;
                    }
                }
            </style>
            
            <div class="success-container">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-10 col-sm-12">
                        <div class="success-card">
                            <div class="success-header">
                                <img src="/simrs/static/src/img/kemenkes.webp" alt="Logo Rumah Sakit" class="hospital-logo"/>
                                <h2>Terima Kasih, Pendaftaran Pasien Berhasil!</h2>
                                <p class="success-subtitle">Data pasien Anda telah tercatat di sistem kami.</p>
                            </div>
                            
                            <div class="patient-info-container">
                                <div class="patient-info">
                                    <div class="info-group">
                                        <div class="info-label">Nama Pasien</div>
                                        <div class="info-value"><t t-esc="pasien_name"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">No Rekam Medis</div>
                                        <div class="info-value"><t t-esc="no_rm"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Tempat Lahir</div>
                                        <div class="info-value"><t t-esc="tempat_lahir"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Tanggal Lahir</div>
                                        <div class="info-value">
                                            <t t-set="month_names" t-value="['', 'Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember']"/>
                                            <t t-esc="'{:02d}'.format(pasien_dob.day)"/> <t t-esc="month_names[pasien_dob.month]"/> <t t-esc="pasien_dob.year"/>
                                        </div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Umur</div>
                                        <div class="info-value"><t t-esc="pasien_age_detail"/></div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Jenis Kelamin</div>
                                        <div class="info-value">
                                            <t t-esc="pasien_gender == 'male' and 'Laki-Laki' or pasien_gender == 'female' and 'Perempuan'"/>
                                        </div>
                                    </div>
                                    
                                    <div class="info-group">
                                        <div class="info-label">Tanggal Pendaftaran</div>
                                        <div class="info-value"><t t-esc="datetime_indonesia"/></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="button-container">
                                <a href="/pendaftaran" class="btn-teal">
                                    <span class="material-icons">arrow_back</span>
                                    Kembali ke Formulir Pendaftaran
                                </a>
                                <a t-att-href="'/print_registration_pdf?no_rm=' + no_rm" class="btn-print">
                                    <span class="material-icons">picture_as_pdf</span>
                                    Cetak PDF
                                </a>
                            </div>
                            
                            <div class="check-animation">
                                <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                    <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
                                    <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
