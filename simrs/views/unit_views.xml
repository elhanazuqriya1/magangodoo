<odoo>
    <record id="view_unit_tree" model="ir.ui.view">
        <field name="name">simrs.unit.tree</field>
        <field name="model">simrs.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="kode"/>
            </tree>
        </field>
    </record>

    <record id="view_unit_form" model="ir.ui.view">
        <field name="name">simrs.unit.form</field>
        <field name="model">simrs.unit</field>
        <field name="arch" type="xml">
            <form string="Unit/Poli">
                <group>
                    <field name="name"/>
                    <field name="kode"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_unit" model="ir.actions.act_window">
        <field name="name">Unit/Poli</field>
        <field name="res_model">simrs.unit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
