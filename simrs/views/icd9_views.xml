<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_icd9_tree" model="ir.ui.view">
        <field name="name">simrs.icd9.tree</field>
        <field name="model">simrs.icd9</field>
        <field name="arch" type="xml">
            <tree string="Daftar Kode Prosedur ICD-0">
                <field name="icd9_code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_icd9_form" model="ir.ui.view">
        <field name="name">simrs.icd9.form</field>
        <field name="model">simrs.icd9</field>
        <field name="arch" type="xml">
            <form string="ICD-9 Prosedur">
                <sheet>
                    <group>
                        <field name="icd9_code"/>
                        <field name="name"/>
                    </group>
                    <group>
                        <separator string="Import dari File XLSX" colspan="2"/>
                        <field name="file_data"/>
                        <button name="import_xls"
                                type="object"
                                string="Import ICD-9"
                                class="btn-primary"
                                icon="fa-upload"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_icd9" model="ir.actions.act_window">
        <field name="name">Import ICD-9</field>
        <field name="res_model">simrs.icd9</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_icd9_root" name="Master Data"/>
    <menuitem id="menu_icd9" name="Import ICD-9" parent="menu_icd9_root" action="action_icd9"/>
</odoo>
